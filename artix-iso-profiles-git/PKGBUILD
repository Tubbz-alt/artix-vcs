# Maintainer: artoo <artoo@manjaro.org>

_toolsver=0.1
_branch=devel

pkgbase=iso-profiles
pkgname=('artix-iso-profiles-base-git'
        'artix-iso-profiles-git')
pkgver=r5.eef4607
pkgrel=1
arch=('any')
url="https://github.com/artix-linux/iso-profiles"
license=('GPL')
source=("git+$url.git#branch=$_branch")
sha256sums=('SKIP')

pkgver() {
    cd ${srcdir}/${pkgbase}
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

_inst_dir(){
    install -d $pkgdir/usr/share/artools/iso-profiles
    cp -a $srcdir/${pkgbase}/$1 $pkgdir/usr/share/artools/iso-profiles/
}

package_artix-iso-profiles-base-git() {
    pkgdesc='Cromnix iso profiles base'
    provides=("artools-base-iso=$pkgver")
    conflicts=('artix-iso-profiles-base')

    _inst_dir 'shared'

    cp $srcdir/${pkgbase}/repo_info $pkgdir/usr/share/artools/iso-profiles/
}

package_artix-iso-profiles-git() {
    pkgdesc='Cromnix iso profiles'
#     groups=('artools')
    provides=('iso-profiles')
    conflicts=('artix-iso-profiles')
#     depends=("artools-yaml>=${_toolsver}")

    _inst_dir 'lxqt'
}
