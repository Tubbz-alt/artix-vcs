# Maintainer: artoo <artoo@manjaro.org>

_pkgname=calamares-tools

pkgname=calamares-tools-git
pkgver=r11.ee16c78
pkgrel=1
arch=('any')
pkgdesc='Development tools for Calamares'
license=('GPL')
url='https://github.com/udeved/calamares-tools'
# url='https://github.com/calamares/calamares-tools'
provides=('calamares-tools')
conflicts=('calamares-tools')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
    cd ${srcdir}/${_pkgname}
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd ${srcdir}/${_pkgname}
    install -d ${pkgdir}/usr/share/calamares/
    cp -rv schemas/ ${pkgdir}/usr/share/calamares/
}
